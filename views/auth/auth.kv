
<Auth>:
    BoxLayout:
        orientation:'vertical'
        spacing: dp(20)
        padding: dp(20)
        canvas.before:
            Color: 
                rgba: [1,1,1,1]
            Rectangle:
                pos: self.pos
                size: self.size
                source: "assets/imgs/bg-login.png"
        AnchorLayout:
            BoxLayout:
                orientation: "vertical"
                size_hint_y: .7
                size_hint_x: .8
                AnchorLayout:
                    anchor_y: 'bottom'
                    Image:
                        source: "assets/imgs/logo-light.png"
                BoxLayout:
                    orientation: "vertical"
                    spacing: dp(20)
                    Text:
                        text: "MANDOS"
                        font_name: app.fonts.heading
                        font_size: app.fonts.size.extra
                        color: app.color_primary_text
                        halign: "center"
                        valign: "bottom"
                        # size_hint_y: None
                        # height: dp(54)
                    AnchorLayout:
                        anchor_y: "top"
                        Label:
                            text: 'An All In One, Simple yet feature rich solution for your business'
                            text_size: [self.parent.width, None]
                            font_name: app.fonts.subheading
                            font_size: app.fonts.size.h3
                            size: self.texture_size
                            color: app.color_primary_text
                            halign: "center"
                            valign: "top"
                            size_hint_y: None


    BoxLayout:
        orientation:'vertical'
        spacing: dp(0)
        BoxLayout:
            orientation:'vertical'
            spacing: dp(10)
            size_hint_y: .3
            Text:
                text: "MANDOS"
                font_name: app.fonts.styled
                font_size: app.fonts.size.extra
                color: app.color_primary_text
                halign: "center"
                valign: "bottom"
            AnchorLayout:
                anchor_y: "top"
                Label:
                    text: "Enter your details to sign in"
                    text_size: [self.parent.width, None]
                    font_name: app.fonts.body
                    font_size: app.fonts.size.h3
                    size: self.texture_size
                    color: app.color_secondary_text
                    halign: "center"
                    valign: "top"
                    size_hint_y: None
        AnchorLayout:
            size_hint_y: .5
            BoxLayout:
                orientation:'vertical'
                spacing: dp(24)
                padding: dp(24)
                size_hint_x: .7
                height: 100
                Label:
                    id: info
                    text: ''
                    markup: True
                    size_hint_y: None
                    height: 20
                BackBox:
                    size_hint_y: None
                    height: dp(54)
                    bcolor: app.color_secondary_bg
                    radius: [self.height*.1]
                    padding: [dp(12), dp(2)]
                    FlatField:
                        id: username_field
                        hint_text: "username"
                        hint_text_color: app.color_primary_text
                        font_size: app.fonts.size.h2
                        multiline: False
                BackBox:
                    size_hint_y: None
                    height: dp(54)
                    bcolor: app.color_secondary_bg
                    radius: [self.height*.1]
                    padding: [dp(12), dp(2)]
                    FlatField:
                        id: pwd_field
                        hint_text: "password"
                        hint_text_color: app.color_primary_text
                        font_size: app.fonts.size.h2
                        password: True
                        multiline: False
                BackBox:
                    size_hint_y: None
                    height: dp(64)
                    RoundedButton:
                        text: "Sign in"
                        font_name: app.fonts.heading
                        font_size: app.fonts.size.h1
                        bcolor: app.color_primary
                        radius: [self.height*.1]
                        on_release: root.validate_user()
                BackBox:
                    size_hint_y: None
                    height: dp(64)
                    FlatButton:
                        text: "Don't have an account?"
                        font_name: app.fonts.subheading
                        font_size: app.fonts.size.h3
                        color: app.color_primary_text
                        radius: [self.height*.1]
                Widget:
        AnchorLayout:
            size_hint_y: .2
            padding: dp(24)
            Text:
                text: "v0.01"
                font_size: app.fonts.size.h2
                valign: "bottom"
                halign: "center"
                color: app.color_primary_text
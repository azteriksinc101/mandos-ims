<StatsBox@BoxLayout>:
	bcolor: rgba("#ffffff")
	title: ""
	subtitle: ""
	font_size: dp(16)
	BackBox:
		orientation: 'vertical'
		spacing: dp(8)
		radius: [self.height*.1]
		bcolor: root.bcolor
		Text:
			text: root.subtitle
			font_size: root.font_size
			color: rgba("#ffffff")
			halign: "center"
			valign: "middle"
			size_hint_y: .6
		Text:
			text: root.title
			font_size: app.fonts.size.h5
			color: rgba("#ffffff")
			halign: "center"
			valign: "middle"
			size_hint_y: .4